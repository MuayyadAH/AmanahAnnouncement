@using AmanahAnnouncement.ViewModel.NewsViewModel
@model CreateNewsVM
@{
    ViewData["Controller"] = "News";
    ViewData["ControllerAR"] = "اخبار الامانة";

    ViewData["Title"] = "اضافة خبر جديد";
}


<form method="post" asp-action="Create" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="container">

        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="Title"></label>
                <input asp-for="Title" type="text" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <br />
@*        <textarea asp-for="Content" id="summernote" name="editordata"></textarea>
*@
        @Html.TextAreaFor(Model => Model.Content, new { @id = "summernote", @row = 5 , @name = "editordata"})

        <div class="form-group col-md-12">
            <label asp-for="File"></label>
            <input asp-for="File" type="file" multiple class="form-control">

        </div>
        <br /><br />
        <button type="submit" class="btn btn-primary btn-lg">اضافة الخبر</button>

    </div>


</form>

<script>
    $('#summernote').summernote({
        placeholder: 'محتوى الخبر',
        tabsize: 2,
        height: 200
    });
</script>