@using AmanahAnnouncement.ViewModel
@model EditAnnVM

@{
    ViewData["Controller"] = "Announcment"; // Controller in English
    ViewData["ControllerAR"] = "اعلانات الامانة"; // Controller in Arabic

    ViewData["Title"] = "تعديل الاعلان";
}


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="container">

        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="Title"></label>
                <input asp-for="Title" type="text" class="form-control" id="inputEmail4">
            </div>
        </div>
        <br />
        @Html.TextAreaFor(Model => Model.Content, new { @id = "summernote", @row = 5 , @name = "editordata"})

        <button type="submit" class="btn btn-primary">تعديل الاعلان</button>
        <button class="btn btn-danger" href="/Announcment/Index">العودة الى الخلف</button>

    </div>


</form>

<script>
    $('#summernote').summernote({
        placeholder: 'محتوى الاعلان',
        tabsize: 2,
        height: 200
    });
</script>